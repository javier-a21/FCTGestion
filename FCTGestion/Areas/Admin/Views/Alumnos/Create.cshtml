@model FCTGestion.Models.Alumno

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Crear Alumno";
}

<h1 class="mb-4">Crear Nuevo Alumno</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CorreoEducacion" class="form-label"></label>
        <input type="email" asp-for="CorreoEducacion" class="form-control" />
        <span asp-validation-for="CorreoEducacion" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="SeguridadSocial" class="form-label"></label>
        <input asp-for="SeguridadSocial" class="form-control" />
        <span asp-validation-for="SeguridadSocial" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="TutorCentroId" class="form-label">Tutor del Centro</label>
        <select asp-for="TutorCentroId" class="form-control" asp-items="ViewBag.TutorCentroId" required>
            <option value="">-- Selecciona un tutor centro --</option>
        </select>
        <span asp-validation-for="TutorCentroId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">💾 Crear Alumno</button>
    <a asp-area="Admin" asp-controller="PanelAdmin" asp-action="Index" class="btn btn-outline-primary mt-3">
        🔙 Volver al Panel
    </a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
