@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Panel del Administrador";
}

<div class="container mt-5">
    <h1 class="mb-5 text-center">Panel del Administrador</h1>

    <div class="row row-cols-1 row-cols-md-2 g-4">
        <!-- Empresas -->
        <div class="col">
            <div class="card h-100 shadow-sm border-0 p-4 tarjeta-hover">
                <div class="card-body d-flex flex-column text-center">
                    <h4 class="card-title mb-3">Empresas</h4>
                    <p class="card-text flex-grow-1 fs-5">Gestiona las empresas asociadas a las prácticas.</p>
                    <a asp-area="Admin" asp-controller="Empresas" asp-action="Index" class="btn btn-primary mt-3">
                        Ver Empresas
                    </a>
                </div>
            </div>
        </div>

        <!-- Alumnos -->
        <div class="col">
            <div class="card h-100 shadow-sm border-0 p-4 tarjeta-hover">
                <div class="card-body d-flex flex-column text-center">
                    <h4 class="card-title mb-3">Alumnos</h4>
                    <p class="card-text flex-grow-1 fs-5">Gestiona los alumnos que realizarán las prácticas.</p>
                    <a asp-area="Admin" asp-controller="Alumnos" asp-action="Index" class="btn btn-primary mt-3">
                        Ver Alumnos
                    </a>
                </div>
            </div>
        </div>

        <!-- Tutores de Empresa -->
        <div class="col">
            <div class="card h-100 shadow-sm border-0 p-4 tarjeta-hover">
                <div class="card-body d-flex flex-column text-center">
                    <h4 class="card-title mb-3">Tutores de Empresa</h4>
                    <p class="card-text flex-grow-1 fs-5">Gestiona los tutores asignados en las empresas.</p>
                    <a asp-area="Admin" asp-controller="TutoresEmpresa" asp-action="Index" class="btn btn-primary mt-3">
                        Ver Tutores de Empresa
                    </a>
                </div>
            </div>
        </div>

        <!-- Tutores de Centro -->
        <div class="col">
            <div class="card h-100 shadow-sm border-0 p-4 tarjeta-hover">
                <div class="card-body d-flex flex-column text-center">
                    <h4 class="card-title mb-3">Tutores del Centro</h4>
                    <p class="card-text flex-grow-1 fs-5">Gestiona los tutores del centro educativo.</p>
                    <a asp-area="Admin" asp-controller="TutoresCentro" asp-action="Index" class="btn btn-primary mt-3">
                        Ver Tutores del Centro
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
