@model IEnumerable<FCTGestion.Models.TutorEmpresa>

@{
    ViewData["Title"] = "Tutores de Empresa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert" id="alertaTemporal">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["MensajeCrearEmpresa"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" id="alertaTemporal">
        @TempData["MensajeCrearEmpresa"]
    </div>
}
<h2>Tutores de Empresa</h2>

<a asp-area="Admin" asp-controller="TutoresEmpresa" asp-action="Create" class="btn btn-primary mb-3">
    Nuevo Tutor
</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th class="text-center">Nombre</th>
            <th class="text-center">Correo</th>
            <th class="text-center">Empresa</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tutor in Model)
        {
            <tr>
                <td class="text-center">@tutor.Nombre</td>
                <td class="text-center">@tutor.Correo</td>
                <td class="text-center">@tutor.Empresa?.Nombre</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@tutor.Id" class="btn btn-sm btn-warning m-1 ">Editar</a>
                    <a asp-action="Details" asp-route-id="@tutor.Id" class="btn btn-sm btn-info m-1">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@tutor.Id" class="btn btn-sm btn-danger m-1">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-start mb-4 mt-3">
    <a asp-area="Admin" asp-controller="PanelAdmin" asp-action="Index" class="btn btn-outline-primary">
        🔙 Volver al Panel
    </a>
</div>
@section Scripts {
    <script>
        setTimeout(function () {
            var alerta = document.getElementById('alertaTemporal');
            if (alerta) {
                alerta.classList.remove('show');
                alerta.classList.add('fade');
                alerta.style.opacity = '0';


                setTimeout(() => alerta.remove(), 500);
            }
        }, 3000);
    </script>
}