@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Seleccionar Alumno";
}

<h2>Selecciona un alumno para consultar sus tareas</h2>

<form asp-action="ValidarSemana" method="get">
    <div class="form-group">
        <label for="alumnoId" class="form-label">Alumno:</label>
        <select id="alumnoId" name="alumnoId" class="form-control" asp-items="ViewBag.Alumnos">
            <option value="">-- Selecciona un alumno --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Consultar Semana</button>
</form>
<div class="text-start mb-4 mt-3">
    <a asp-area="TutoresEmpresa" asp-controller="PanelTutorEmpresa" asp-action="Index" class="btn btn-outline-primary">
        🔙 Volver al Panel
    </a>
</div>
