@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Panel del Tutor de Empresa";
}

<div class="container mt-5">
    <h1 class="mb-5 text-center">Panel del Tutor de Empresa</h1>

    <div class="row row-cols-1 row-cols-md-2 g-4 justify-content-center">
        <!-- Validar tareas -->
        <div class="col">
            <div class="card h-100 shadow-sm border-0 p-4 tarjeta-hover">
                <div class="card-body d-flex flex-column text-center">
                    <h4 class="card-title mb-3">Validar tareas</h4>
                    <p class="card-text flex-grow-1 fs-5">Revisa y aprueba las tareas semanales de tus alumnos.</p>
                    <a asp-area="TutoresEmpresa" asp-controller="TareasDiarias" asp-action="Index" class="btn btn-primary mt-3">
                        Ir a Tareas
                    </a>
                </div>
            </div>
        </div>

        <!-- Ver alumnos asignados -->
        <div class="col">
            <div class="card h-100 shadow-sm border-0 p-4 tarjeta-hover">
                <div class="card-body d-flex flex-column text-center">
                    <h4 class="card-title mb-3">Alumnos asignados</h4>
                    <p class="card-text flex-grow-1 fs-5">Consulta el listado de alumnos bajo tu tutela.</p>
                    <a asp-area="TutoresEmpresa" asp-controller="Alumnos" asp-action="Index" class="btn btn-primary mt-3">
                        Ver alumnos
                    </a>

                </div>
            </div>
        </div>

        <!-- Evaluación FCT -->
        <div class="col-md-6 col-lg-4 d-flex justify-content-center">
            <div class="card h-100 shadow-sm border-0 p-4 tarjeta-hover w-100">
                <div class="card-body d-flex flex-column text-center">
                    <h4 class="card-title mb-3">Evaluación FCT</h4>
                    <p class="card-text flex-grow-1 fs-5">Rellena la evaluación final de FCT para un alumno.</p>
                    <a class="btn btn-primary mt-3" asp-area="TutoresEmpresa" asp-controller="EvaluacionFCT" asp-action="Create">
                        Rellenar Evaluación
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>